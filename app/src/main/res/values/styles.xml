<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!---->
    <!---->
    <!---->
    <!---->
    <!-- *   TEXT-->
    <style name="Text_Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">8sp</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!---->
    <style name="Text_MainTitle" parent="Text_Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">16sp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginBottom">24sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text_SubTitle" parent="Text_Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">4sp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginBottom">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text_Normal" parent="Text_Base">
        <item name="android:layout_marginTop">2sp</item>
    </style>

    <style name="Text_Normal_NoEmphasized" parent="Text_Base">
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Text_Normal_Emphasized" parent="Text_Base">
        <item name="android:layout_marginTop">2sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TextFor_RecyView_Item" parent="Text_Base">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">16sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <style name="Text_businessName" parent="Text_Base">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">16sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginBottom">0dp</item>
    </style>

    <!---->
    <!---->
    <!---->
    <!---->
    <!-- * EDIT TEXT-->
    <style name="ET_Base">
        <item name="android:inputType">textPersonName</item>
        <item name="android:ems">10</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ET_Common" parent="ET_Base">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">32sp</item>
        <item name="android:layout_marginRight">32sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#435981</item>
        <item name="android:layout_marginTop">4sp</item>
        <item name="android:layout_marginBottom">12sp</item>
    </style>

    <style name="ETFor_RecyView_Item" parent="ET_Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginRight">16sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:hint">etRV_itemName</item>
    </style>


    <!---->
    <!---->
    <!---->
    <!---->
    <!-- *   BUTONS-->
    <style name="Button_base">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">24sp</item>
        <item name="android:layout_marginLeft">40sp</item>
        <item name="android:layout_marginRight">40sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Btn_fullIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:background">#FFD8A6</item>-->
        <item name="android:background">@drawable/style_button_common</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:padding">8sp</item>
    </style>

    <style name="Btn_forBasicOptions">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/style_button_common</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingTop">12sp</item>
        <item name="android:paddingBottom">12sp</item>
        <item name="android:paddingLeft">18sp</item>
        <item name="android:paddingRight">18sp</item>
    </style>

    <!---->
    <!-- BUTTONS - > commons-->
    <style name="Btn_Common" parent="Button_base">
        <item name="android:background">#fff</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:stateListAnimator">@null</item>
<!--        <item name="android:background">@drawable/style_button_common</item>-->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">12sp</item>
        <item name="android:paddingBottom">12sp</item>
    </style>

    <style name="Btn_Link" parent="Button_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">36sp</item>
        <item name="android:paddingRight">36sp</item>
        <item name="android:paddingTop">6sp</item>
        <item name="android:paddingBottom">6sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/emphasis</item>
        <item name="android:background">#fff</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="Btn_Shrink" parent="Button_base">
        <item name="android:background">@drawable/style_button_common</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">36sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingRight">36sp</item>
    </style>

    <style name="Btn_Common2" parent="Btn_Common">
        <item name="android:background">@drawable/style_button_common_2</item>
    </style>



    <!---->
    <!-- BUTTON -> full icon-->
    <style name="Btn_fullIcon_edit" parent="Btn_fullIcon">
        <item name="android:src">@drawable/ic_button_edit</item>
    </style>

    <style name="Btn_fullIcon_delete" parent="Btn_fullIcon">
        <item name="android:src">@drawable/ic_button_delete</item>
    </style>

    <style name="Btn_fullIcon_cancel" parent="Btn_fullIcon">
        <item name="android:src">@drawable/ic_button_close</item>
    </style>

    <style name="Btn_fullIcon_check" parent="Btn_fullIcon">
        <item name="android:src">@drawable/ic_button_check</item>
    </style>

    <style name="Btn_fullIcon_moreOptions" parent="Btn_fullIcon">
        <item name="android:src">@drawable/ic_button_more</item>
    </style>

    <style name="Btn_fullIcon_filter" parent="Btn_fullIcon">
        <item name="android:src">@drawable/ic_button_filter</item>
    </style>

    <style name="Btn_fullIcon_return" parent="Btn_fullIcon">
        <item name="android:src">@drawable/ic_button_back</item>
    </style>

    <style name="Btn_fullIcon_list_ready" parent="Btn_fullIcon">
        <item name="android:src">@drawable/ic_button_list_ready</item>
    </style>
</resources>